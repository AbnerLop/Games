<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <TextView
            android:text="P1: 0"
            android:layout_width="120dp"
            android:layout_height="91dp" android:id="@+id/p1Score"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.145"
            app:layout_constraintVertical_bias="0.081" android:textAlignment="textStart"
            android:textColor="@android:color/black" android:textSize="50sp"
            android:visibility="visible"/>
    <TextView
            android:text="P2: 0"
            android:layout_width="120dp"
            android:layout_height="91dp" android:id="@+id/p2Score"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.854"
            app:layout_constraintVertical_bias="0.081" android:textAlignment="textEnd"
            android:textColor="@android:color/black" android:textSize="50sp"
            android:visibility="visible"/>
    <Button
            android:text="Reset"
            android:layout_width="213dp"
            android:layout_height="57dp" android:id="@+id/reset"
            app:layout_constraintBottom_toBottomOf="@+id/tableLayout" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/tableLayout"
            app:layout_constraintVertical_bias="0.93"
            android:onClick="reset"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center"
            android:padding="20dp" android:id="@+id/tableLayout" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="94dp">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            <Button
